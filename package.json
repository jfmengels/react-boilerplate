{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "react-boilerplate",
  "main": "app.js",
  "scripts": {
    "test": "npm run lint && npm run test-unit",
    "test-unit": "mocha --opts mocha.opts",
    "test-unit:w": "npm run test-unit -- --watch",
    "lint": "standard && eslint . --ext=js --ext=jsx",
    "coverage": "isparta cover _mocha -- --opts mocha.opts",
    "postinstall": "webpack --config ./server/webpack-production.config.js --progress --colors",
    "start": "node app.js"
  },
  "author": "Jeroen Engels <jfm.engels@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "babel": "^5.8.23",
    "babel-core": "^6.7.6",
    "babel-loader": "^5.3.2",
    "css-loader": "^0.19.0",
    "express": "^4.13.3",
    "file-loader": "^0.8.4",
    "lodash": "^3.10.1",
    "qs": "^5.2.0",
    "react": "^0.14.0",
    "react-dom": "^0.14.0",
    "react-redux": "^4.0.0",
    "react-router": "^1.0.0-rc1",
    "redux": "^3.0.0",
    "redux-thunk": "^1.0.0",
    "style-loader": "^0.12.3",
    "updeep": "^0.10.1",
    "url-loader": "^0.5.6",
    "webpack": "^1.12.1"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.1",
    "chai": "^3.3.0",
    "coveralls": "^2.11.4",
    "eslint": "^1.7.0",
    "eslint-config-standard": "^4.4.0",
    "eslint-config-standard-react": "^1.1.0",
    "eslint-plugin-react": "^3.3.1",
    "eslint-plugin-standard": "^1.3.1",
    "isparta": "^3.1.0",
    "mocha": "^2.3.3",
    "postcss-loader": "^0.6.0",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^2.1.2",
    "standard": "^5.3.1",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.4.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "it",
      "beforeEach",
      "afterEach",
      "before",
      "after"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jfmengels/react-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/jfmengels/react-boilerplate/issues"
  },
  "homepage": "https://github.com/jfmengels/react-boilerplate#readme"
}
